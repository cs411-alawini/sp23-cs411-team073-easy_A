<html >

<head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <section class="home">
    <h1>Flights Details</h1>
    <div class="row">
        <div class="column" style="background-color:#aaa;">
          <h2>Airline Ratings</h2>
    		<table class="flight-table">
    			<tr>
      			<th>Airline</th><th>Average Ratings</th><th>Performance</th>
   			</tr>

   		<% for (var i = 0; i < bestflights.length; i++) { %>
    			<tr>
      			<td><a id="avgperf" href = "<%= airlineMap.get(bestflights[i].AirlineName) %>"><%= bestflights[i].AirlineName %></a></td>
      			<td><%= bestflights[i].AvgPerformance %></td>
      			<td><%= bestflights[i].Performance %></td>
    			</tr>
   		<% } %>
		</table>
	</div>
	</section>
</body>
</html>
